@font-face {
    font-family: 'Montserrat-Regular';
    src: local('Montserrat'), url(../../fonts/Montserrat-Regular.otf) format('truetype');
}
@font-face {
    font-family: 'Montserrat-Medium';
    src: local('Montserrat'), url(../../fonts/Montserrat-Medium.otf) format('truetype');
}
@font-face {
    font-family: 'Montserrat-Bold';
    src: local('FiraSans'), url(../../fonts/Montserrat-Bold.otf) format('truetype');
}

* {
    margin: 0;
    padding: 0;
}
body{
    /* font-family:'Open Sans',sans-serif; */
    font-size:18px;
    color:#010000;
    font-weight:400;
    font-style:normal
}
a{
    text-decoration:none;
    -webkit-transition:.4s ease-in-out;
    -moz-transition:.4s ease-in-out;
    transition:.4s ease-in-out;
    cursor:pointer
}
a:hover{
    color:#ff1755;
    -webkit-transition:.4s ease-in-out;
    -moz-transition:.4s ease-in-out;
    transition:.4s ease-in-out;
    text-decoration:none
}
