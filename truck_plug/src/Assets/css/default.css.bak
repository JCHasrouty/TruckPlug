.container-fluid{
    margin: 15px;
    font-family: Montserrat-Regular;
}

.row{
    /* margin: 50px; */
    display:flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
}

.map-row{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    height: 700px;
}

.column{
    margin: 20px;
    line-height: 80px;
    display: flex;
    flex-direction: column;
    flex-basis: 100%;
    flex: 1;
}

.column-map{
    display: flex;
    flex-direction: column;
    flex:1;
}

.footer-column{
    width:100%;
    background-color: black;
    color: white;
    font-size: 20px;
    font-weight: bold;
    text-align: center;
}

.container-fluid h1 {
    line-height: 55px;
    font-family: Montserrat-Bold;
    text-transform: uppercase;
}
.container-fluid h2{
    line-height: 55px;
    font-size: 24px;
}

.home-page-info {
    line-height: 3em;
}
