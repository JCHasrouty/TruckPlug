header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 30px 5%;
    background-color: #000000;
    height: 90px;
    font-size: larger;
    font-family: Montserrat-Medium;
}

header .logo{
    cursor: pointer;
    margin-right: auto;
}

.nav_links {
    list-style: none;
}

.nav_links li {
    display: inline-block;
    padding: 0px 15px;
}

.nav_links li a {
    transition: all 0.3s ease 0s;
    color: #ff0044;
}

.nav_links li a:hover {
    color: #fff;
}   


footer {
    display: page;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
    padding: 30px 5%;
    color: white;
    background-color: #000000;
    height: 90px;
    font-size: larger;
    font-family: Montserrat-Medium;
}

